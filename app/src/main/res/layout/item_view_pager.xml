<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/viewPagerImage"
        android:layout_width="match_parent"
        android:layout_height="200dp"

        android:src="@drawable/ic_flag_se" />

    <TextView
        android:id="@+id/viewPagerTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/viewPagerImage"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="Title"
        android:textAlignment="center"
        android:textColor="@color/gnt_black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/viewPagerDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@id/viewPagerTitle"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:fontFamily="@font/lato_thin"
        android:text=" idfhgirehig fdhg"
        android:textAlignment="center"
        android:textColor="@color/gnt_black"
        android:textSize="18sp"
        android:textStyle="bold" />


</LinearLayout>